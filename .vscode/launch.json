{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Webserv: Debug Session (LINUX)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/webserv",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build Debug",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "Webserv: Debug Session (MAC)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/webserv",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for lldb",
					"text": "command script import /path/to/lldb/pretty_printers.py",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build Debug",
			"miDebuggerPath": "/usr/bin/lldb"
		}
	]
}